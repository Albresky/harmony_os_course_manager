<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:list_parent"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:padding="10vp">


        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <Text
                ohos:height="match_content"
                ohos:width="0px"
                ohos:end_margin="0vp"
                ohos:layout_alignment="vertical_center"
                ohos:start_margin="15vp"
                ohos:text="姓名"
                ohos:text_size="18fp"
                ohos:weight="1"/>

            <Text
                ohos:id="$+id:user_name"
                ohos:height="match_content"
                ohos:width="0px"
                ohos:layout_alignment="vertical_center"
                ohos:margin="5vp"
                ohos:text="小明"
                ohos:text_size="18fp"
                ohos:weight="2"/>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="match_content"
                    ohos:width="0px"
                    ohos:end_margin="0vp"
                    ohos:layout_alignment="vertical_center"
                    ohos:start_margin="15vp"
                    ohos:text="学号"
                    ohos:text_size="18fp"
                    ohos:weight="1"/>

                <TextField
                    ohos:id="$+id:user_id"
                    ohos:height="match_content"
                    ohos:width="0px"
                    ohos:layout_alignment="vertical_center"
                    ohos:margin="5vp"
                    ohos:text="20001234"
                    ohos:text_size="18fp"
                    ohos:weight="2"/>

            </DirectionalLayout>
        </DirectionalLayout>

        <ListContainer
            ohos:id="$+id:list_container"
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:bnt_add"
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:bg_common"
            ohos:text="$string:add"
            ohos:text_color="#000000"
            ohos:text_size="30fp"/>
    </DirectionalLayout>
</DirectionalLayout>