<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:padding="5vp">

    <Text
        ohos:id="$+id:title"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:grade_edit"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:top_margin="5vp"/>

    <Text
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#220000ff"
        ohos:bottom_margin="5vp"
        ohos:text_size="18fp"
        ohos:top_margin="5vp"/>

    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical"
        ohos:padding="1vp"
        ohos:weight="1">

        <TextField
            ohos:id="$+id:grade"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:margin="5fp"
            ohos:background_element="$graphic:bg_textfield"
            ohos:padding="2vp"
            ohos:text_input_type="pattern_number"
            ohos:text_alignment="center"
            ohos:text_color="#000000"
            ohos:text_size="60fp"/>

    </DirectionalLayout>

    <Text
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#220000ff"
        ohos:bottom_margin="5vp"
        ohos:text_size="18fp"
        ohos:text_input_type="pattern_number"
        ohos:max_text_lines="1"
        ohos:top_margin="5vp"/>

    <Button
        ohos:id="$+id:btn_ok"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="10vp"
        ohos:text="$string:save"
        ohos:text_color="#000000"
        ohos:text_size="20fp"/>
</DirectionalLayout>