<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="2vp">

        <Text
            ohos:id="$+id:name"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="4vp"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="16fp"
            ohos:weight="1"/>

        <Text
            ohos:id="$+id:id"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="4vp"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="16fp"
            ohos:weight="2"/>

        <Text
            ohos:id="$+id:mark"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="4vp"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="16fp"
            ohos:weight="2"/>

        <Button
            ohos:id="$+id:btn_edit"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_common"
            ohos:layout_alignment="vertical_center"
            ohos:padding="4vp"
            ohos:text="$string:edit"
            ohos:text_size="16fp"/>
    </DirectionalLayout>

    <Text
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#220000ff"
        ohos:margin="2vp"
        ohos:text_size="18fp"/>
</DirectionalLayout>