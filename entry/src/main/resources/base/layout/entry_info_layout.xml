<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="学生基本信息"
        ohos:text_alignment="center"
        ohos:text_size="28fp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="2fp"
            ohos:text="学号:"
            ohos:text_alignment="left"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

        <TextField
            ohos:id="$+id:user_id"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:hint="20001234"
            ohos:text_size="18fp"
            ohos:weight="2"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="2fp"
            ohos:text="学生姓名:"
            ohos:text_alignment="left"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

        <TextField
            ohos:id="$+id:user_name"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:hint="张三"
            ohos:text_size="18fp"
            ohos:weight="2"/>

        <Text
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="2fp"
            ohos:text="性别:"
            ohos:text_alignment="left"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

        <Picker
            ohos:id="$+id:gender"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:normal_text_size="18fp"
            ohos:weight="2"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="2fp"
            ohos:text="年级:"
            ohos:text_alignment="left"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

        <Picker
            ohos:id="$+id:s_grade"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:text_size="18fp"
            ohos:weight="2"/>

        <Text
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="2fp"
            ohos:text="班级:"
            ohos:text_alignment="left"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

        <Picker
            ohos:id="$+id:s_class"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:normal_text_size="18fp"
            ohos:weight="2"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="2fp"
            ohos:text="手机号:"
            ohos:text_alignment="left"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

        <TextField
            ohos:id="$+id:phone_number"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:normal_text_size="18fp"
            ohos:weight="2"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="0px"
            ohos:margin="2fp"
            ohos:text="家庭住址:"
            ohos:text_alignment="left"
            ohos:text_size="18fp"
            ohos:weight="1"
            />

        <TextField
            ohos:id="$+id:home_address"
            ohos:height="match_content"
            ohos:width="0px"
            ohos:normal_text_size="18fp"
            ohos:weight="2"/>

    </DirectionalLayout>

    <TextField
        ohos:id="$+id:ps"
        ohos:height="200fp"
        ohos:width="match_parent"
        ohos:margin="20fp"
        ohos:background_element="$graphic:round_border"
        ohos:max_text_lines="10"
        ohos:hint="备注"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:btn_load_info"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="载入信息"/>
        <Button
            ohos:id="$+id:btn_save_info"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="载入信息"/>
    </DirectionalLayout>


</DirectionalLayout>