<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:bottom_margin="50fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="学生成绩信息管理系统"
        ohos:text_alignment="horizontal_center"
        ohos:text_size="28fp"
        ohos:top_margin="100px"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="20fp"
            ohos:orientation="horizontal">

            <Text
                ohos:height="match_content"
                ohos:width="0px"
                ohos:text="工号"
                ohos:text_alignment="center"
                ohos:text_size="18fp"
                ohos:weight="1"/>

            <TextField
                ohos:id="$+id:user_id"
                ohos:height="match_content"
                ohos:width="0px"
                ohos:hint="请输入工号"
                ohos:text_alignment="left"
                ohos:text_input_type="pattern_number"
                ohos:text_size="18fp"
                ohos:weight="2"/>
        </DirectionalLayout>


        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="20fp"
            ohos:orientation="horizontal">

            <Text
                ohos:height="match_content"
                ohos:width="0px"
                ohos:text="密码"
                ohos:text_alignment="center"
                ohos:text_size="18fp"
                ohos:weight="1"/>

            <TextField
                ohos:id="$+id:user_passwd"
                ohos:height="match_content"
                ohos:width="0px"
                ohos:hint="请输入密码"
                ohos:text_alignment="left"
                ohos:text_input_type="pattern_password"
                ohos:text_size="18fp"
                ohos:weight="2"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <Button
        ohos:id="$+id:btn_login"
        ohos:height="50fp"
        ohos:width="100fp"
        ohos:background_element="$graphic:btn_style"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100fp"
        ohos:right_margin="100fp"
        ohos:text="登录"
        ohos:text_size="22fp"
        ohos:top_margin="50fp"
        />

</DirectionalLayout>